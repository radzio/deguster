{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PLUGIN_ROOT/hooks/scripts/check-nav-map-staleness.sh"
          },
          {
            "type": "command",
            "command": "$CLAUDE_PLUGIN_ROOT/hooks/scripts/check-registry-staleness.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PLUGIN_ROOT/hooks/scripts/suggest-map-update.sh"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PLUGIN_ROOT/hooks/scripts/auto-approve-maestro.sh"
          }
        ]
      }
    ]
  }
}
